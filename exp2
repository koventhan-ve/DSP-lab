clc
clear
close();

x=input("enter the sequence:")
h=input("enter the sequence:")
y=conv(x,h)

subplot(3,1,1);
plot2d3(x);
xlabel("samples");
ylabel("Amplitude");
title("Linear Convolution of signals");

subplot(3,1,2);
plot2d3(h);
xlabel("samples");
ylabel("Amplitude");

subplot(3,1,3);
plot2d3(y);
xgrid(5,1,7);
xlabel("samples");
ylabel("Amplitude");

disp("x = ");
disp(x);

disp("h = ");
disp(h);

disp("y = ");
disp(y);
